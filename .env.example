# WordPress environment o'zgaruvchilari (ixtiyoriy)
# Agar kerak bo'lsa, bu faylni .env deb nomlang va o'z qiymatlaringizni kiriting

# Ma'lumotlar bazasi sozlamalari
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password

# MySQL Root paroli
MYSQL_ROOT_PASSWORD=root_password

# WordPress Debug rejimi
WP_DEBUG=true

# Port sozlamalari (ixtiyoriy)
WORDPRESS_PORT=8080
PHPMYADMIN_PORT=8081
MYSQL_PORT=3306
